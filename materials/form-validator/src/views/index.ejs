<!-- views/index.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <script src="/scripts/validation.js"></script>
    <link rel="stylesheet" href="styles/index.css" />
  </head>
  <body>
    <script>
      0;
    </script>
    <header class="header">
      <div class="header-wrapper">
        <nav class="header-nav" aria-label="Main Navigation">
          <h1><%= title %></h1>
          <%- include('partials/searchbar.ejs') %>
        </nav>
      </div>
    </header>
    <main class="main">
      <div class="actions">
        <a href="/create" class="btn btn-create">Create a user</a>
      </div>

      <% if (locals.users && users.length > 0) { %>
      <ul class="user-list">
        <% users.forEach(function(user) { %>
        <li class="user-item">
          <div class="user-info">
            <h3><%= user.firstName %> <%= user.lastName %></h3>
            <p><strong>ID:</strong> <%= user.id %></p>
            <% if (user.email) { %>
            <p><strong>Email:</strong> <%= user.email %></p>
            <% } %> <% if (user.age) { %>
            <p><strong>Age:</strong> <%= user.age %></p>
            <% } %> <% if (user.bio) { %>
            <p style="color: #000000d2"
              ><strong>Bio:</strong> <%= user.bio %></p
            >
            <% } %>
          </div>
          <div class="user-actions">
            <a href="/<%= user.id %>/update" class="btn btn-update">Update</a>
            <form
              action="/<%= user.id %>/delete"
              method="POST"
              class="delete-form"
            >
              <button
                type="submit"
                class="btn btn-delete"
                onclick="return confirm('Are you sure you want to delete this user?');"
              >
                Delete
              </button>
            </form>
          </div>
        </li>
        <% }); %>
      </ul>
      <% } else { %>
      <p class="no-users">No users found. Create one to get started!</p>
      <% } %>
    </main>
  </body>
</html>
